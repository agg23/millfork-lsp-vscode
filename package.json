{
  "name": "millfork-vscode",
  "description": "Integration for the Millfork LSP",
  "author": "agg23",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/agg23/millfork-vscode"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:mfk",
    "onCommand:millfork.restart"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Millfork",
      "properties": {
        "millfork.jarPath": {
          "type": "string",
          "default": "",
          "description": "The path to the Millfork jar file used for execution"
        }
      }
    },
    "commands": [
      {
        "command": "millfork.restart",
        "title": "Millfork: Restart language server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "mocha": "^8.1.1",
    "@types/node": "^12.12.0",
    "eslint": "^6.4.0",
    "@typescript-eslint/parser": "^2.3.0",
    "typescript": "^4.0.2"
  }
}
